@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="page-content page-cabinet-personal">
    <div class="container clearfix">
        <div class="page-title">
            <h1 class="h1" style="float: right;">Ваша скидка - @Model.Input.Discount %</h1>
            <h1 class="h1">Личные данные</h1>
        </div>
        <div class="content-row">
            <div class="sidebar">

                <ul class="cabinet-nav">
                    <li data-code="personal" class="active"><a href="/Identity/Account/Manage/Index">Личные данные</a></li>
                    <li data-code="orders" class=""><a href="/Identity/Account/Manage/Orders">Мои заказы</a></li>
                    <li data-code="delivery" class=""><a href="/Identity/Account/Manage/Addresses">Адрес доставки</a></li>
                    <li data-code="logout" class=""><a href="/Identity/Account/Logout">Выход</a></li>
              

                </ul>
            </div>
            <div style="margin-left: 300px">
                <div class="panel-simple offset-bottom-40">
                    <div class="panel-simple-middle">
                        <form class="form form-cabinet-personal" id="profile-form" method="post">
                            <div class="row">
                                <div class="small-12 medium-6 columns form-cabinet-personal-left">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-row">
                                        <label class="form-label" >Ваша фамилия</label>
                                        <input asp-for="Input.LastName" class="form-input" />
                                    </div>
                                    <div class="form-row">
                                        <label class="form-label">Ваше имя</label>
                                        <input asp-for="Input.FirstName" class="form-input" />
                                    </div>
                                    <div class="form-row">
                                        <label class="form-label">Ваше отчество</label>
                                        <input asp-for="Input.SecondName" class="form-input" />
                                    </div>
                                    <div class="form-row">
                                        <label class="form-label" asp-for="Input.Email">E-mail</label>
                                        <input asp-for="Input.Email" class="form-input" />
                                    </div>
                                    <div class="form-row-inline ">
                                        <label class="form-label">Пол <sup>*</sup></label>
                                        
                                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                            <label class="btn btn-secondary active">
                                                <input type="radio" asp-for="Input.Sex" value="М" id="option1" autocomplete="off" checked=""> М
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" asp-for="Input.Sex" value="Ж" id="option2" autocomplete="off"> Ж
                                            </label>
                                        </div>                
                                        
                                    </div>
                                </div>
                                <div class="small-12 medium-6 columns form-cabinet-personal-right">
                                    <div class="form-row">
                                        <label class="form-label" asp-for="Input.PhoneNumber"></label>
                                        <input asp-for="Input.PhoneNumber" class="form-input" />
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-row">
                                        <label class="form-label" for="birthday">Дата рождения</label>
                                        <input asp-for="Input.Date" type="date" placeholder="дд.мм.гггг">
                                    </div>

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label class="form-input">Текущий пароль</label>
                                        <input asp-for="Input.OldPassword" class="form-control" />
                                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-input">Новый пароль</label>
                                        <input asp-for="Input.NewPassword" class="form-control" />
                                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-input">Подтверждение пароля</label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="row offset-top-15">
                                    <div class="small-12 text-center">
                                        <button id="update-profile-button" type="submit" class="btn btn-danger">Сохранить</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}